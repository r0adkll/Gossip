<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Gossip" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/textOnPrimaryHighEmphasis</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/textOnSecondaryHighEmphasis</item>

        <item name="android:colorBackground">@color/colorSurface</item>
        <item name="colorOnBackground">@color/textOnSurfaceHighEmphasis</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/textOnSurfaceHighEmphasis</item>

        <item name="android:textColorPrimary">@color/textOnSurfaceHighEmphasis</item>
        <item name="android:textColorSecondary">@color/textOnSurfaceMediumEmphasis</item>
        <item name="android:textColorPrimaryDisableOnly">@color/textOnSurfaceDisabled</item>

    </style>

    <style name="Theme.Gossip" parent="Base.Theme.Gossip">
    </style>

    <style name="Theme.Gossip.Splash">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="colorOnBackground">@color/textOnPrimaryHighEmphasis</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/textOnPrimaryHighEmphasis</item>
    </style>

    <style name="ShapeAppearance.Gossip.Message" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>
